/* pages/organization/orgLink/change/changeLink.wxss */

.container {
  height: 100%;
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  position: relative; 
  box-sizing: border-box;
  background: #fefefe;
}

.search{
  height:130rpx;
  width: 94%;
  background: #4393df;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  position: relative; 
  bottom: 150rpx
}

.inputBox{
  height: 78%;
  width: 82%;
  background: #ffffff;
  display: flex;
  align-items: center;
  margin-left: 1%;
  padding-left: 9px;
  font-size: 38rpx;
  
  border-radius: 10px;
}

.inputBox input{
  width: 520rpx;
  height: 80rpx;
}

.search image{
  height: 40px;
  width: 40px;
  margin-left: 5px;
}



.body{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 98%;
  position: relative;
  bottom: 70rpx;
  box-sizing: border-box
}

.tips{
  height: 60rpx;
  width: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;

  color: rgb(155, 155, 155);
}


.orgBox{
  background-color: #fefefe;
  top: 50rpx;
}

.item{
  height: 230rpx;
  display: flex;
  align-items: center;
  justify-items: center;
  margin-top: 8rpx;
}

.content{
  height: 96%;
  width: 75%;
  margin-left: 4%;
  background-color:#ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
  border-style: solid;
  border-color:aliceblue;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  border-width: 5rpx;
}

.orgName{
  height: 55%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 18px;
  margin-left: 30rpx;
  color:rgb(50, 103, 201);
}

.orgType{
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 17px;
  margin-left: 30rpx;
  color:rgb(41, 41, 41);
}

.orgAddress{
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 16px;
  margin-left: 30rpx;
  color:rgb(80, 80, 80);
}

.join{
  height: 100%;
  width: 110rpx;
  background-color: aliceblue;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  border-top-right-radius: 16rpx;
  border-bottom-right-radius: 16rpx;

  color: #64a3df;
}

.info{
  height: 90rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #64a3df;
  font-size: 17px;
}