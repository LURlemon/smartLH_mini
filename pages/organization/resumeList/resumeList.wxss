/* pages/organization/resumeList/resumeList.wxss */
.recommand {

  width: 98%;
  margin-left: 1%;
  background-color: #fafafa;
  margin-top: 4%;
  margin-bottom: 1%;
}

.title {
  /* font-family:cursive; */
  font-size: 35rpx;
  font-weight: 510;
  position: relative;
  left: 20rpx;
  margin-top: 3%;
  margin-left: 2%;
}

.title text {
  color: #2051b9;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 7%;
  font-size: 16px;
  margin-top: 1%;
}

.name {
  margin-left: 0%;
  margin-top: 1%;
  font-size: 19px;
  color: rgb(15, 9, 3);
}

.phone {
  margin-top: 1%;
  font-size: 17px;
  color: rgb(58, 82, 134);
}

.academic {
  margin-top: 1%;
  font-size: 16.5px;
  color: rgb(35, 40, 49);
}

.politics {
  margin-top: 1%;
  color: rgb(3, 9, 22);
}


.sex {
  margin-top: 1%;
  color: rgb(5, 10, 22);
}

.birthday {
  margin-top: 1%;
  color: rgb(71, 74, 78);
}

.subOrg{
  margin-top: 1%;
  font-size: 16.5px;
  color: rgb(218, 137, 45);
}

.position {
  margin-left: 1%;
  color: #64a7e6;
}

.content {

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /*设置对齐模式：垂直对齐*/
  -webkit-line-clamp: 2;
  /*设置多行的行数*/
  line-height: 25px;

  width: 90%;
  margin-left: 5%;
  margin-top: 2%;
  margin-bottom: 2%;
}



.date {
  /* font-family:cursive; */
  font-size: 27rpx;
  font-weight: 100;
  margin-left: 61%;
  margin-bottom: 1%;
  color: #6988a1;
}



.item {
  /* display:flex; */
  border: 1px solid #acd5fc;

  margin-bottom: 2%;
  background-color: #fefefe;
  border-radius: 16rpx;
  width: 94%;
  margin-left: 3%;


}

.noMore {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30%;
  font-size: 18px;
  font-weight: bold;
  color: rgb(255, 165, 0);
}

.bottom {
  display: flex;
  align-items: center;
  margin-left: 5%;
  color: #2d5b86;
}

.number {
  margin-right: 14%;

}

.subject {
  margin-right: 14%;
}