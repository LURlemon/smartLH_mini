.box {
  width: 98%;
  margin-left: 1%;
  background-color: #f8f8f8;
  margin-bottom: 14%;
  border-radius: 16rpx;
  padding-top: 65px;
  padding-bottom: 20px;
}

.item {
  width: 94%;
  margin-top: 3%;
  margin-left: 3%;
  background-color: #fdfdfd;
  border-radius: 16rpx;

  display: flex;
  align-items: center;
  justify-content: center;

}

.body {
  width: 90%;
  margin-left: 2%;
  background-color: #fefefe;
  border-radius: 16rpx;
  margin-bottom: 2%;

  display: flex;
  flex-direction: column;
}

.title {
  font-size: 18px;
  color: #0a67be;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.contentBox {
  background-color: #ffffff; 
}

.includeOrg{
  font-size: 17px;
  color: rgb(16, 73, 138);
  margin-bottom: 10rpx;
}

.content{
  width: 100%;
  font-size: 16.5px;
  color: rgb(46, 46, 46);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /*设置对齐模式：垂直对齐*/
  -webkit-line-clamp: 2;
  /*设置多行的行数*/
  line-height: 25px;
}

.bottom{
  margin-top: 3%;

}

.time {
  margin-top: 3%;
  margin-left: 300rpx;
  font-size: 14px;
  color: #6988a1;
}

.deliver{
  font-size: 30rpx;
  color: #e68b24;
  border-radius: 16rpx;
}

.tips{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: rgb(255, 165, 0);
  font-size: 20px;
  font-weight: bold;
  background-color: #ffffff;
}

.selected{
  background-color: rgb(245, 249, 255);
}

.lookDdeliver{
  background-color: rgb(255, 248, 236);
}