.swiper-nav {
  background-color: #fff;
  width: 100%;
  height: 115rpx;
  display: flex;
  position: fixed;
  z-index: 1;
}

.absolute{
  position: absolute;
  background-color: #fff;
  width: 100%;
  height: 115rpx;
  display: flex;
}

.swiper-nav .item-nav {
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #9fa0a2;
  font-size: 36rpx;
}

/* 实现选项栏选中效果 */
.swiper-nav .active {
  color: #3369e6;
  border-bottom: 5rpx solid #3369e6;
}

.absolute .item-nav {
  flex: 1;
