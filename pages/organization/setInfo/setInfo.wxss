/* pages/organization/setInfo/setInfo.wxss */
.select{
  margin-left: 10%;
}

/* 图片容器 */
.imageContainer {
  width: 100%;
  background-color: white;

  /* 子容器水平居中 */
  display: flex;
  flex-direction: column;
  align-items: center;

  /* border: 1rpx solid black; */
}


.icon {
  width: 40px;
  height: 40px;
}

.upButton {
  width: 40%;
  margin-left: 29%;
}

.radiogroup {
  display: flex;
  flex-direction: row;
}

.radiobox {
  display: flex;
  flex-direction: row;
  margin-left: 50rpx;
 
}

.textarea{
  min-height:32px;
	/* 设置 min-height 是为了设置 textarea 的高度 */
	/* 因为行内样式优先级比较高，所以曲线救国 */
	font-size:16px;
	line-height:16px;
}

.weui-btn {
  background-color: #3369e6;
  width: 300rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}
