/* 筛选栏 */
.cxj-contents {
  position: sticky;
  width: 100%;
  height: 100rpx;
  z-index: 1003;
  box-shadow: 0px 15px 15px -15px rgba(200, 200, 200, 0.6);
  overflow: hidden;
  /* margin-top: -30rpx; */
}

.cxj-menu {
  background-color: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
  font-size: 32rpx;
}

/* .cxj-menu .flex-view.active { 
  background-color: #fff;
  border-bottom: 5rpx solid #00aa14
} */
.cxj-menu .flex_nav.active {
  color: #3369e6
}

/* .cxj-menu .flex-view.active {color: #00aa14} */
.flex-view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  overflow: hidden;
  display: block;
  text-align: center;
  line-height: 100rpx;
}

.flex_nav {
  font-size: 32rpx;
  color: #333
}

.cxj-icon {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-left: 5px;
}

/* 筛选内容 */
.cxj-content {
  width: 100%;
  font-size: 28rpx;
  z-index: 1009;
}

.cxj-content-li {
  line-height: 60rpx;
  text-align: center;
}

.cxj-tab-layout {
  width: 100%;
  overflow: hidden;
  z-index: 1009;
  height: 100%;
  background-color: rgba(000, 000, 000, .5);
  position: fixed;
}

.cxj-tab-layout .navs.active {
  background: #bdd7ee !important;
}

.cxj-tap-wrap {
  padding: 0 30rpx;
  background: #fff;
  padding-bottom: 40rpx;
  margin-bottom: 25%;
}

.cxj-tap-main {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  box-sizing: border-box;
}

.select-title {
  margin-bottom: 20rpx;
}

.scroll {
  height: calc(100vh - 35px);
  
}

.cxj-tab-layout .navs {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 300;
  background: #F3F3F3;
  border-radius: 6rpx;
  color: #333333;
  margin-bottom: 24rpx;
  flex: 0 0 31%;
}

.cxj-tap-main:after {
  content: "";
  width: 31%;
}

/* 按钮 */
.select_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 25%;
}



.select_btn .clear {
  flex: 1;
  margin-right: 10rpx;
  font-size: 30rpx;
  font-weight: 300;
  border: 1px solid #3369e6;
  border-radius: 6rpx;
  background-color: #fff;
  color: #3369e6;
  height: 88rpx;
  line-height: 54rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.select_btn .submit {
  flex: 2;
  font-size: 30rpx;
  margin-left: 10rpx;
  font-weight: 300;
  background-color: #3369e6;
  color: #fff;
  height: 88rpx;
  line-height: 60rpx;

  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recommand {
  height: calc(100vh - 264rpx);
  width: 98%;
  margin-left: 1%;
  background-color: #fafafa;
  margin-top: 4%;

}

.title {
  /* font-family:cursive; */
  font-size: 35rpx;
  font-weight: 510;
  position: relative;
  left: 20rpx;
  margin-top: 3%;
  margin-left: 2%;
}

.title text {
  color: #0c58a0;
}

.info {

  display: flex;
  align-items: center;
}

.name {
  margin-left: 5%;
  width: 60%;
   
}

.position {
  margin-left: 1%;
  color: #64a7e6;
}

.content {

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /*设置对齐模式：垂直对齐*/
  -webkit-line-clamp: 2;
  /*设置多行的行数*/
  line-height: 25px;

  width: 90%;
  margin-left: 5%;
  margin-top: 2%;
  margin-bottom: 2%;
}



.date {
  /* font-family:cursive; */
  font-size: 27rpx;
  font-weight: 100;
  margin-left: 74%;
  margin-bottom: 1%;
  color: #6988a1;
}



.item {
  /* display:flex; */
  border: 1px solid #acd5fc;

  margin-bottom: 2%;
  background-color: #fefefe;
  border-radius: 16rpx;
  width: 94%;
  margin-left: 3%;


}

.noMore {
  display: flex;
  font-size: 13.5px;
  justify-content: center;
  align-items: center;
  margin-bottom: 4%;
  color: rgb(117, 117, 117);
}

.bottom {
  display: flex;
  align-items: center;
  margin-left: 5%;
  color: #2d5b86;
}

.number {
  margin-right: 14%;

}

.subject {
  margin-right: 14%;
}

.tips{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 600rpx;
  color: rgb(255, 165, 0);
  font-size: 21px;
  font-weight: bold;
}

.selected{
  background-color: rgb(242, 248, 255);
}