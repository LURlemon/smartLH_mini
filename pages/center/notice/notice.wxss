/* pages/center/notice/notice.wxss */
.swiper-nav {
  background-color: #fff;
  width: 100%;
  height: 115rpx;
  padding: 0;
  display: flex;
}

.swiper-nav .item-nav {
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #9fa0a2;
  font-size: 36rpx;
}

/* 实现选项栏选中效果 */
.swiper-nav .active {
  color: #3369e6;
  border-bottom: 5rpx solid #3369e6;
}

.noticeBox {
  width: 98%;
  margin-left: 1%;
  background-color: #fafafa;
  margin-bottom: 30px;
}

.item {
  width: 94%;
  margin-top: 3%;
  margin-left: 3%;
  background-color: #fcfcfc;
  border-radius: 16rpx;
  border-color: #bde1ff;
  border-style: solid;
  border-width: 1rpx;

  display: flex;
  align-items: center;
  justify-content: center;

}

.body {
  width: 90%;
  margin-left: 2%;
  background-color: #fdfdfd;
  border-radius: 16rpx;

  display: flex;
  flex-direction: column;
}

.title {
  font-size: 18px;
  color: #2384df;
  margin-top: 16rpx;
  margin-bottom: 20rpx;
}

.contentBox {
  background-color: #fefefe;
 
 
}

.content{
  width: 100%;
  font-size: 15.5px;
  color: rgb(34, 34, 34);
  word-break: break-all;
 
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; */
  line-height: 25px;
  display: flex;
  flex-direction: column;
}

.time {
  margin-top: 3%;
  font-size: 14px;
  color: #6988a1;
}

/* 展开 收起 */
.state{
  width: 96%;
  text-align: right;
  color: rgb(75, 117, 235);
  margin: 10rpx 0rpx; 
  font-size: 28rpx;
  
}
.hide{
  display: -webkit-box;
}

.show{
  display: block;
  line-height: 25px;
}
