/* pages/center/center.wxss */

page{
  background: #f5f5f5;
}

.container{
  width: 100%;
  height: 100%;
  background: #f9f9f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10px 0;
  box-sizing: border-box;
  margin-bottom: 80px;
}

.user{
  height: 100px;
  width: 98%;
  display: flex;
  flex-direction: row;
  background: #0566c0;
  border-radius: 10px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.name{
  width: 50%;
  height: 80px;
  margin-top: 40px;
  padding-left: 40px;
  display: flex;
  color: #f9f9f9;
  font-size: 20px;
}

.gender{
  width: 40x;
  height: 90px;
  display: flex;
  align-items: center;
  justify-items: center;
  margin-top: 18px;
}
.gender image{
  width: 30px;
  height: 30px;
}

.identity{
  width: 40x;
  height: 90px;
  display: flex;
  align-items: center;
  justify-items: center;
  margin-left: 20px;
  margin-top: 18px;
}
.identity image{
  width: 30px;
  height: 30px;
}

.gif{
  width: 98%;
  height: 20px;
  background: #0566c0;
  position: relative;
  overflow-x: hidden;
}

.gif image{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.process{
  background: #f3f3f3;
  width: 98%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 25px;
  margin-bottom: 75px;
  border-radius: 7px;
}

.item{
  height: 66px;
  width: 98%;
  display: flex;
  flex-direction: row;
  margin-top: 4px;
  
  margin-left: 1%;
  background: #f9f9f9;
  border-radius: 18rpx;
}
.icon{
  width: 45px;
  height: 70px;
  display: flex;
  align-items: center;
  margin-left: 11px;
}
.icon image{
  width: 55rpx;
  height: 55rpx;
}

.box{
  display: flex;
  align-items: center;
  font-size: 17px;
  color: rgb(59, 59, 59);
}

.avatarUrl {
  overflow: hidden;
  width: 160rpx;
  height: 160rpx;
  margin: 30rpx;
  margin-left: 40rpx;
  border-radius: 50%;
}
.avatarUrl image{
  width: 150rpx;

  border-radius: 50%;
}

.point{
  width: 60rpx;
  height: 60rpx;
}

.selected{
  background-color: rgb(240, 240, 240);
}